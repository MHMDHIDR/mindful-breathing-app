{
  "name": "mindful-breathing-app",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run build:ts && electron .",
    "build:ts": "bun build ./index.ts --outdir ./dist --target node --outfile index.js --external electron --external node-notifier",
    "dev": "bun run build:ts && electron .",
    "dist": "bun run build:ts && electron-builder"
  },
  "main": "dist/index.js",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.3.0",
    "@types/node-notifier": "^8.0.5",
    "electron": "^37.4.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "node-notifier": "^10.0.1"
  }
}
