{
  "name": "mindful-wellness-app",
  "version": "1.0.0",
  "description": "A lightweight desktop app for mindful wellness reminders",
  "author": "Mohammed Haydar",
  "module": "src/main.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run build:ts && electron .",
    "build:ts": "bun build ./src/main.ts --outdir ./dist --target node --outfile main.js --external electron --external node-notifier --external electron-store && bun build src/ui/preferences-preload.ts --outdir dist --target node --format cjs --external electron && cp ./src/ui/preferences.html ./dist/",
    "dev": "bun run build:ts && electron .",
    "dist": "bun run build:ts && electron-builder",
    "dist:mac": "bun run build:ts && electron-builder --mac",
    "dist:win": "bun run build:ts && electron-builder --win",
    "dist:linux": "bun run build:ts && electron-builder --linux"
  },
  "main": "dist/main.js",
  "build": {
    "appId": "com.mindfulwellness.app",
    "productName": "Mindful Wellness",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "icons/**/*",
      "sounds/**/*",
      "src/ui/**/*",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "sounds/**/*"
    ],
    "mac": {
      "icon": "icons/icon.png",
      "category": "public.app-category.healthcare-fitness",
      "extendInfo": {
        "LSUIElement": true
      },
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "icons/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "icons/icon.png",
      "category": "Utility",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.3.0",
    "@types/node-notifier": "^8.0.5",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "electron-store": "^10.1.0",
    "node-notifier": "^10.0.1"
  }
}
